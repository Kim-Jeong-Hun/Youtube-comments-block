{
  "manifest_version": 3,
  "name": "YouTube 댓글 차단기",
  "version": "1.0",
  "description": "YouTube에서 댓글을 숨기거나 필터링할 수 있습니다.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
